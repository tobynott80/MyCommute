<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="uk.ac.cardiff.c21048228.mycommute.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_timetable"
        android:name="uk.ac.cardiff.c21048228.mycommute.ui.timetable.TimetableFragment"
        android:label="@string/title_timetable"
        tools:layout="@layout/fragment_timetable" >
        <action
            android:id="@+id/action_navigation_timetable_to_locationSelectorFragment2"
            app:destination="@id/locationSelectorFragment2"
            app:launchSingleTop="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="uk.ac.cardiff.c21048228.mycommute.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/locationSelectorFragment2"
        android:name="uk.ac.cardiff.c21048228.mycommute.ui.locationSelector.LocationSelectorFragment"
        android:label="LocationSelectorFragment" />
</navigation>